<UserControl
    x:Class="PL.Views.AdminView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PL.Views"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid>
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <Image
                            Source="../Images/OrdersIcon.png" />
                        <TextBlock
                            Text="Orders" />
                    </StackPanel>
                </TabItem.Header>
                <ListView>
                    <ListView.View>
                        <GridView>
                            
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <Image
                            Source="../Images/ProductsIcon.png" />
                        <TextBlock
                            Text="Products" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabControl.Resources>
                <Style
                    TargetType="StackPanel">
                    <Setter
                        Property="Height"
                        Value="50" />
                    <Setter
                        Property="Width"
                        Value="150" />
                    <Setter
                        Property="Orientation"
                        Value="Horizontal" />
                </Style>
                <Style
                    TargetType="TextBlock">
                    <Setter
                        Property="FontSize"
                        Value="25"></Setter>
                    <Setter
                        Property="VerticalAlignment"
                        Value="Center"></Setter>
                </Style>
            </TabControl.Resources>
        </TabControl>

    </Grid>
</UserControl>
